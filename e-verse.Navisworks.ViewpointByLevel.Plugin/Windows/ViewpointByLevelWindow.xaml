<Window x:Class="EVerse.Navisworks.ViewpointByLevel.Plugin.Windows.ViewpointByLevelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStyle="None"
             WindowStartupLocation="CenterScreen"
             AllowsTransparency="True"
             Background="{x:Null}"
             mc:Ignorable="d"
             Width="350"
             Height="620"
             Title="Viewpoint by level"
             ResizeMode="NoResize"
             Topmost="True"
             ShowInTaskbar="True"
             Style="{DynamicResource CustomWindowStyle}">

    <Window.InputBindings>
        <KeyBinding Key="Escape"
                    Command="Close" />
        <KeyBinding Gesture="Enter"
                    Command="Open" />
        <KeyBinding Gesture="F1"
                    Command="Help" />
    </Window.InputBindings>

    <Border
        x:Name="MainWindow_Border"
        Background="{DynamicResource BackgroundColor}"
            BorderBrush="Transparent"
            BorderThickness="1,1,1,1"
            CornerRadius="15,15,15,15"
            Margin="10,10,10,10"
            MouseDown="Border_MouseDown">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20"
                              Color="Gray"
                              Opacity="0.3"
                              ShadowDepth="0"
                              Direction="0"></DropShadowEffect>
        </Border.Effect>

        <Grid Margin="20">
            <Grid>

                <Button Style="{DynamicResource MainTitleButtonStyle}"
                    Background="Transparent" 
                    BorderBrush="Transparent" 
                    Click="Pris_Link" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="34" Width="168"  >
                </Button>

                <StackPanel  Orientation="Horizontal"
                             VerticalAlignment="Top"
                             HorizontalAlignment="Right">

                    <Label x:Name="versionLabel"
                       Style="{DynamicResource SecondaryLabel}"
                       HorizontalAlignment="Right"
                       Content="v.1.0.0"
                       Width="50"
                           Opacity="0.5"/>

                    <Button Style="{DynamicResource TabCloseButtonStyle}"
                        Click="Close_Button"/>

                </StackPanel>


            </Grid>
            <Line Stroke="{DynamicResource MainGray}"
                  X2="1000"
                  Opacity="0.5"
                  StrokeThickness="4"
                  VerticalAlignment="Top"
                  Margin="-9,55,-9,0" 
                  RenderTransformOrigin="0.5,0.5" 
                  Height="2">
                <Line.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Line.RenderTransform>
            </Line>

            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="0,80,0,0">

                <Label Style="{DynamicResource TitleLabels}" 
                   Content="Model"/>

                <ComboBox x:Name="modelsNames" 
                      HorizontalAlignment="Center" 
                      Margin="0,10,0,15" 
                      VerticalAlignment="Top" 
                      Width="284" 
                      SelectionChanged="Model_SelectionChanged" />

                <Line Style="{DynamicResource DashedLine}"
                      Margin="{DynamicResource LinesMargin}"/>

                <Label Style="{DynamicResource TitleLabels}" 
                   Content="Units" />

                <StackPanel  Orientation="Horizontal"
                             HorizontalAlignment="Right"
                             Margin="0,10,0,15">

                    <Label Style="{DynamicResource SecondaryLabel}"
                       Content="Model units:"
                       VerticalAlignment="Center"
                       Width="83" />

                    <ComboBox x:Name="modelUnits" 
                          VerticalAlignment="Center"
                              HorizontalAlignment="Right"
                              Margin="0"
                          Width="204" 
                          SelectionChanged="Units_SelectionChanged" />

                </StackPanel>

                <Line Style="{DynamicResource DashedLine}"
                      Margin="{DynamicResource LinesMargin}"/>

                <Label Style="{DynamicResource TitleLabels}" 
                   Content="Plane"  />

                <StackPanel  Orientation="Horizontal"
                             HorizontalAlignment="Right"
                             Margin="0,10,0,15">

                    <Label Style="{DynamicResource SecondaryLabel}"
                           Content="Offset:"
                           Width="84" />

                    <TextBox Style="{DynamicResource MainTextBox}" 
                             IsEnabled="False" 
                             x:Name="textBox" 
                             Height="34" 
                             TextWrapping="Wrap" 
                             Text="" 
                             Width="204"
                             PreviewTextInput="TextBox_PreviewTextInput"
                             DataObject.Pasting="TextBox_Pasting"/>
                </StackPanel>

                <Button Style="{DynamicResource ApplyButtonStyle}" 
                    x:Name="applyButton" 
                    IsEnabled="False" 
                    Content="Apply" 
                    Margin="0,40,0,0" 
                    VerticalAlignment="Top"
                    Width="140"
                    HorizontalAlignment="Center"
                    Click="Apply_Button"
                    Height="22" 
                    FontWeight="SemiBold" />

            </StackPanel>

            <Button Style="{DynamicResource CloseButtonStyle}"
                    Background="Transparent"
                    Click="Title_Link"
                    FontWeight="Light"
                    FontSize="12"     
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" 
                    Height="22">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="Transparent" 
                                Margin="0,0,3,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                                <!-- First Text -->
                                <TextBlock Text="Made with"
                               FontWeight="Bold"
                               Margin="4,0,0,0"
                               VerticalAlignment="Center"/>

                                <!-- Heart Image -->
                                <Viewbox Stretch="Uniform"
                                         Margin="4,4,4,4">
                                    <Path Style="{DynamicResource HeartLogo}"/>
                                </Viewbox>

                                <!-- Second Text -->
                                <TextBlock Text="by e-verse"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" TargetName="border" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" TargetName="border" Value="0.2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>


        </Grid>
    </Border>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
</Window>