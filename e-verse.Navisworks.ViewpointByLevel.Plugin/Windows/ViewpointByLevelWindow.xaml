<Window x:Class="EVerse.Navisworks.ViewpointByLevel.Plugin.Windows.ViewpointByLevelWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             WindowStyle="None"
             WindowStartupLocation="CenterScreen"
             AllowsTransparency="True"
             Background="{x:Null}"
             mc:Ignorable="d"
             Width="580"
             Height="350"
             Title="Viewpoint by level"
             ResizeMode="NoResize"
             Topmost="True"
             ShowInTaskbar="True"
             Style="{DynamicResource CustomWindowStyle}">
    <Border
        x:Name="MainWindow_Border"
        Background="White"
            BorderBrush="Transparent"
            BorderThickness="1,1,1,1"
            CornerRadius="8,8,8,8"
            Margin="10,10,10,10"
            MouseDown="Border_MouseDown">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20"
                              Color="Gray"
                              Opacity="0.3"
                              ShadowDepth="0"
                              Direction="0"></DropShadowEffect>
        </Border.Effect>
        <Grid>
            <Label Style="{DynamicResource TitleLabels}" Content="Model" HorizontalAlignment="Left" Margin="42,85,0,0" VerticalAlignment="Top" Width="122"/>
            <ComboBox x:Name="modelsNames" HorizontalAlignment="Left" Height="22" Margin="42,116,0,0" VerticalAlignment="Top" Width="291" SelectionChanged="Model_SelectionChanged" BorderBrush="#FFACACAC"/>
            <Label Style="{DynamicResource TitleLabels}" x:Name="notificationField" Content="" HorizontalAlignment="Left" Margin="42,114,0,0" VerticalAlignment="Top" Width="291"/>
            <Button Style="{DynamicResource MainButtonStyle}" x:Name="applyButton" Content="Apply" HorizontalAlignment="Left" Margin="412,240,0,0" VerticalAlignment="Top" Width="104" Click="Apply_Button"/>
            <TextBox Style="{DynamicResource MainTextBox}" x:Name="textBox" Height="22" Margin="410,190,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="106"/>
            <Label Style="{DynamicResource TitleLabels}" Content="Model Units" HorizontalAlignment="Left" Margin="351,85,0,0" VerticalAlignment="Top" Width="164"/>
            <Button Style="{DynamicResource MainButtonStyle}" Content="Close" HorizontalAlignment="Left" Margin="42,240,0,0" VerticalAlignment="Top" Width="104" Click="Close_Button"/>
            <ComboBox x:Name="modelUnits" HorizontalAlignment="Left" Height="22" Margin="412,116,0,0" VerticalAlignment="Top" Width="104" SelectionChanged="Units_SelectionChanged" />
            <Label Style="{DynamicResource TitleLabels}" Content="Offset upper clip plane" HorizontalAlignment="Left" Margin="351,160,0,0" VerticalAlignment="Top" Width="164"/>
        </Grid>
    </Border>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
</Window>