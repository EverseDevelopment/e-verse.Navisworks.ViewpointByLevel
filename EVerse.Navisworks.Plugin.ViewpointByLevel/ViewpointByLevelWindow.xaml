<Window x:Class="EVerse.Navisworks.Plugin.ViewpointByLevelWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EVerse.Navisworks.Plugin"
             mc:Ignorable="d" 
             d:DesignHeight="184" d:DesignWidth="494">
    <Grid>
        <ComboBox x:Name="modelsNames" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="291" SelectionChanged="Model_SelectionChanged" BorderBrush="#FFACACAC"/>
        <Label Content="Model" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Width="122"/>
        <Button Content="Apply" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top" Width="104" Click="Apply_Button"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="378,33,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="106"/>
        <Label Content="Offset upper clip plane (feet)" HorizontalAlignment="Left" Margin="319,7,0,0" VerticalAlignment="Top" Width="164"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="380,128,0,0" VerticalAlignment="Top" Width="104" Click="Close_Button"/>

    </Grid>
</Window>
